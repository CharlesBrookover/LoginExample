{
  "name":         "charlesbrookover/loginexample-plain-vanilla",
  "description":  "Example app that uses vanilla PHP to perform a login",
  "license":      "MIT",
  "authors":      [
    {
      "name":     "Charles Brookover",
      "email":    "charlesbrookover@gmail.com",
      "role":     "Developer",
      "homepage": "https://www.landfillsoft.top"
    }
  ],
  "autoload":     {
    "psr-4": {
      "Local\\": "src/lib/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\":            "tests/",
      "Tests\\Bootstrap\\": "tests/bootstrap/"
    }
  },
  "require":      {
    "php":         ">=8",
    "ext-pdo":     "*",
    "ext-sqlite3": "*"
  },
  "require-dev":  {
    "phpunit/phpunit":           "^9.5.25",
    "phpstan/phpstan":           "^1.8",
    "squizlabs/php_codesniffer": "^3.7"
  }
}
